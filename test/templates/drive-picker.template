<h3>Graph Layer Components / Drive Picker Component</h3>

<div class="testbed-wrapper">
  <div class="region-wrapper">
    <div class="region graph-layer">
      <div data-graph-layer="drivePicker" data-graph-layer--form-element="driveId"></div>
    </div>
  </div>
  <div class="region-wrapper">
    <div class="region graph-layer">
      <div
        data-graph-layer="drivePicker"
        data-graph-layer--value="{&quot;s&quot;:&quot;user&quot;,&quot;t&quot;:&quot;me&quot;,&quot;i&quot;:&quot;1&quot;}"
        data-graph-layer--groups-off="1"
        data-graph-layer--sites-off="1"></div>
    </div>
  </div>
  <div class="region-wrapper">
    <div class="region">
      <form class="form-test" action="./drive-picker/submit-test" method="post">
        <div>
          <input type="text" name="firstName" placeholder="Enter First Name">
        </div>
        <div>
          <input type="text" name="lastName" placeholder="Enter Last Name">
        </div>

        <div class="graph-layer">
          <div
            data-graph-layer="drivePicker"
            data-graph-layer--title="You need to select a drive"
            data-graph-layer--form-element="driveId"></div>
        </div>

        <hr>

        <div>
          <input type="submit" value="Submit">
        </div>
    </div>
  </div>
  <div class="region-wrapper">
    <div class="region">
      <div data-graph-layer="drivePickerInputTest"></div>
    </div>
  </div>
  <div class="region-wrapper region-wrapper--large">
    <div class="region region--auto graph-layer">
      <div data-graph-layer="drivePicker" data-graph-layer--form-element="driveId"></div>
    </div>
  </div>
</div>
